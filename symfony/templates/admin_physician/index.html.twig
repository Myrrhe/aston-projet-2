{% extends 'admin/base_admin.html.twig' %}

{% block title %}Physician index{% endblock %}

{% block body %}
    <h1>Physician index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ssn</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Email</th>
                <th>PhoneNumber</th>
                <th>LicenseNumber</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for physician in physicians %}
            <tr>
                <td>{{ physician.id }}</td>
                <td>{{ physician.ssn }}</td>
                <td>{{ physician.firstName }}</td>
                <td>{{ physician.lastName }}</td>
                <td>{{ physician.email }}</td>
                <td>{{ physician.phoneNumber }}</td>
                <td>{{ physician.licenseNumber }}</td>
                <td>
                    <a href="{{ path('app_admin_physician_show', {'id': physician.id}) }}">show</a>
                    <a href="{{ path('app_admin_physician_edit', {'id': physician.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_physician_new') }}">Create new</a>
{% endblock %}
