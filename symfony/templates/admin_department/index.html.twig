{% extends 'base.html.twig' %}

{% block title %}Department index{% endblock %}

{% block body %}
    <h1>Department index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Head</th>
                <th>OathDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for department in departments %}
            <tr>
                <td>{{ department.id }}</td>
                <td>{{ department.name }}</td>
                <td>{{ department.head }}</td>
                <td>{{ department.oathDate ? department.oathDate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_admin_department_show', {'id': department.id}) }}">show</a>
                    <a href="{{ path('app_admin_department_edit', {'id': department.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_department_new') }}">Create new</a>
{% endblock %}
